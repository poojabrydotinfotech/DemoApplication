<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img"
        android:src="@drawable/property_img"
        android:scaleType="centerCrop"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="250dp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_oval"
        android:src="@drawable/oval_shape"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toTopOf="@id/img"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="20dp"
        android:layout_height="20dp"/>


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_like"
        android:background="@drawable/like"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toTopOf="@id/img_oval"
        app:layout_constraintStart_toStartOf="@id/img_oval"
        app:layout_constraintBottom_toBottomOf="@id/img_oval"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="10dp"
        android:layout_height="10dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/price"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:textAllCaps="false"
        android:text="$5.00/hr"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:background="@drawable/bg_radius_btn"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="7dp"
        app:layout_constraintEnd_toEndOf="@id/img"
        app:layout_constraintBottom_toBottomOf="@id/img"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_title"
        android:textSize="19sp"
        android:textStyle="bold"
        android:text="@string/title"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/rating"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img"
        app:layout_constrainedWidth="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RatingBar
        android:id="@+id/rating"
        android:theme="@style/RatingBar"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="@id/txt_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/txt_title"
        app:layout_constrainedWidth="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rating="4"
        android:numStars="5"
        android:layout_marginStart="8dp"
        style="?android:attr/ratingBarStyleSmall" />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_location"
        android:src="@drawable/location"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/txt_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="20dp"
        android:layout_height="20dp"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_dis"
        android:textSize="15sp"
        android:textStyle="normal"
        android:text="@string/dis"
        android:textColor="@color/gray"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/img_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>